{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": [
    "src-srv"
  ],
  "exclude": [
    "node_modules"
  ]
}
